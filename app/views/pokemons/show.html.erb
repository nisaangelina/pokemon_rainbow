<div class="card">
  <div class="card-header">
    <h4 style="font-weight: bold;"><center><%= @pokemons.name %></center></h4>
  </div>
  <div class="card-body">
    <div class="fluid" style="width: 80%">
        <center>
          <%=link_to 'Heal', edit_pokemon_path(@pokemons), class: 'btn btn-success'%>
          <%=link_to 'Edit', edit_pokemon_path(@pokemons), class: 'btn btn-warning'%>
          <%= link_to "Delete", @pokemons, class: 'btn btn-danger', method: :delete, data: {confirm: "Really delete the pokedex?"}%>
        </center>
      </div>
      <br>
    <center>
      <table width="100%">
        <tr>
          <td width="50%">
            <div class ="col-lg-5" style="align-content: center; float: right;">
            <%= image_tag @pokemons.pokedex_image ,width: '300' %>
            </div>
          </td>
          <td width="50%">
            <div class ="col-lg-5" style="align-content: center; float: left;">
              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Element Type
                  <span class="badge badge-primary badge-pill"><%= @pokemons.pokedex_element %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Current Health
                  <span class="badge badge-primary badge-pill"><%= @pokemons.current_health_point %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Attack Power
                  <span class="badge badge-primary badge-pill"><%= @pokemons.attack %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Defence
                  <span class="badge badge-primary badge-pill"><%= @pokemons.defence %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Speed
                  <span class="badge badge-primary badge-pill"><%= @pokemons.speed %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Level
                  <span class="badge badge-primary badge-pill"><%= @pokemons.level %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Experience
                  <span class="badge badge-primary badge-pill"><%= @pokemons.current_experience %></span>
                </li>
              </ul>
            </div>
          </td>
      </table>
    </div>
    <div style="margin: 1em">
      <hr>
      <h5 class="card-title">List of Attacks</h5></center>
      <table class="table table-hover">
    <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Power</th>
      <th scope="col">Max PP</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Absorb</td>
      <td>20</td>
      <td>25</td>
    </tr>
    <tr>
      <td>Vine Whip</td>
      <td>45</td>
      <td>25</td>
    </tr>
    <tr>
      <td>Trop KIck</td>
      <td>15</td>
      <td>70</td>
    </tr>
  </tbody>
</table>
    </div>
  </div>
</div>
