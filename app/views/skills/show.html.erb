<div class="card">
  <div class="card-header">
    <h4 style="font-weight: bold;"><center><%= @skills.name %></center></h4>
  </div>
  <div class="card-body">
    <center>
    <h5 class="card-title">Element Type: <%= @skills.element_type %></h5></center>
      <table width="90%" align="center">
        <tr>
          <td width="63%" style="float: right;">
            <div class ="col-lg-5" style="align-content: center;">
              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Power
                  <span class="badge badge-primary badge-pill"><%= @skills.power %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Max Power Point
                  <span class="badge badge-primary badge-pill"><%= @skills.max_pp %></span>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      </table>
      <br>
      <div class="fluid" >
        <center>
          <%=link_to 'Edit', edit_skill_path(@skills), class: 'btn btn-warning'%>
          <%= link_to "Delete", @skills, class: 'btn btn-danger', method: :delete, data: {confirm: "Really delete the skill?"}%>
        </center>
      </div>
    </div>
  </div>
</div>
