<h1>Skill</h1>
<span style="float: right; margin-bottom: 1em">
  <%=link_to 'Add Skill', new_skill_path, class: 'btn btn-primary'%>
</span>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Element</th>
        <th scope="col">Power</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    <% @skills.each do |skill|%>
      <tr>
        <td><%= skill.name%></td>
        <td><%= skill.element_type%></td>
        <td><%= skill.power%></td>
        <td width="20%">
          <center>
            <%=link_to 'Show', skill_path(skill), class: 'btn btn-success'%>
            <%=link_to 'Edit', edit_skill_path(skill), class: 'btn btn-warning'%>
            <%= link_to "Delete", skill, class: 'btn btn-danger', method: :delete, data: {confirm: "Really delete the skill?"}%>
          </center>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<div class="clearfix">
  <div style="float: right;">
    <%= will_paginate @skills, skill: %w(pagination justify-content-end ) %>
  </div>
</div>
