<div class="card">
  <div class="card-body">
    <%= form_for @pokedex do |f| %>
     <% @pokedex.errors.full_messages.each do |error| %>
         <div class="alert alert-danger" role="alert"><%= error %></div>
        <% end %>

      <div style="margin: 1em">
        <div class="form-group">
          <div class="row">
            <div class="col-3"><p style="font-variant: small-caps; font-size: 20px"><%= f.label :'Name:' %></p></div>
            <div class="col-9"><%= f.text_field :name, class: "form-control" %></div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3"><p style="font-variant: small-caps; font-size: 20px"><%= f.label :'Element Type:' %></p></div>
            <div class="col-9">
              <%= f.select :element_type, Pokedex.element_type.options, {}, {class: 'form-control form-group'} %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3"><p style="font-variant: small-caps; font-size: 20px"><%= f.label :'Base Health:' %></p></div>
            <div class="col-9"><%= f.number_field :base_health_point,class: "form-control", step: 1 %></div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3"><p style="font-variant: small-caps; font-size: 20px"><%= f.label :'Base Attack:' %></p></div>
            <div class="col-9"><%= f.number_field :base_attack, class: "form-control", step: 1 %></div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3"><p style="font-variant: small-caps; font-size: 20px"><%= f.label :'Base Defence:' %></p></div>
            <div class="col-9"><%= f.number_field :base_defence, class: "form-control", step: 1 %></div>
          </div>
        </div>
         <div class="form-group">
          <div class="row">
            <div class="col-3"><p style="font-variant: small-caps; font-size: 20px"><%= f.label :'Base Speed:' %></p></div>
            <div class="col-9"><%= f.number_field :base_speed, class: "form-control", step: 1 %></div>
          </div>
        </div>
         <div class="form-group">
          <div class="row">
            <div class="col-3"><p style="font-variant: small-caps; font-size: 20px"><%= f.label :'Image URL:' %></p></div>
            <div class="col-9"><%= f.text_field :image_url, class: "form-control" %></div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3"><%= f.submit 'Submit', class: "btn btn-primary" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>