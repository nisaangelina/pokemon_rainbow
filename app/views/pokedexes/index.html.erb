<div style="margin: 1em">
<h1>Pokédex</h1>
<span style="float: right; margin-bottom: 1em">
  <%=link_to 'Add Pokédex', new_pokedex_path, class: 'btn btn-primary'%>
</span>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Element</th>
        <th scope="col">Image</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    <% @pokedexes.each do |pokemon|%>
      <tr>
        <td><%= pokemon.name%></td>
        <td><%= pokemon.element_type%></td>
        <td width="25%"><%= image_tag pokemon.image_url, width:'50' %></td>
        <td width="20%">
          <center>
            <%=link_to 'Show', pokedex_path(pokemon), class: 'btn btn-success'%>
            <%=link_to 'Edit', edit_pokedex_path(pokemon), class: 'btn btn-warning'%>
            <%= link_to "Delete", pokemon, class: 'btn btn-danger', method: :delete, data: {confirm: "Really delete the pokedex?"}%>
          </center>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <nav aria-label="Page navigation example">
  <ul class="pagination justify-content-end">
    <li class="page-item disabled">
      <a class="page-link" href="#" tabindex="-1">Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>
</div>